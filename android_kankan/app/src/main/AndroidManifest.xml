        <!-- 微信支付配置 start -->
        <activity
            android:name="com.sunseer.kankan.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!-- 微信支付配置end -->
    </application>

</manifest>